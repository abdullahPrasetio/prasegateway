{
    "name_app":"My Api Gateway 2",
    "auth":true,
    "debug":false,
    "app_env":"local",
    "ttl":15,
    "services":[
        {
            "prefix":"/service-users",
            "base_url":"https://jsonplaceholder.typicode.com",
            "endpoints":[
                {
                    "path":"/",
                    "destination":"/users",
                    "method":"GET",
                    "request":{},
                    "response":{
                        "headers":{
                            "allow":[],
                            "deny":[]
                        },
                        "body":{
                            "allow":[],
                            "deny":[]
                        },
                        "mapping":{
                            "name":"nama",
                            "company":"perusahaan"
                        }
                    }
                },
                {
                    "path":"/:id",
                    "destination":"/users",
                    "method":"GET",
                    "response":{
                        "headers":{
                            "allow":[],
                            "deny":[]
                        },
                        "body":{
                            "allow":[],
                            "deny":[]
                        },
                        "mapping":{
                            "name":"nama",
                            "company.name":"perusahaan.nama",
                            "id":"nik",
                            "address.city":"address.kota",
                            "address.geo.lat":"address.geo.latitude"
                        }
                    }
                }
            ]
        },
        {
            "prefix":"/service-posts",
            "base_url":"https://jsonplaceholder.typicode.com",
            "endpoints":[
                {
                    "path":"/",
                    "destination":"/posts",
                    "method":"GET"
                }
            ]
        },
        {
            "prefix":"/service-todos",
            "base_url":"https://jsonplaceholder.typicode.com",
            "endpoints":[
                {
                    "path":"/",
                    "destination":"/todos",
                    "method":"GET"
                },
                {
                    "path":"/:id",
                    "destination":"/todos",
                    "method":"GET"
                }
            ]
        },
        {
            "prefix":"/service-mockio",
            "base_url":"https://mocki.io",
            "endpoints":[
                {
                    "path":"/:id",
                    "destination":"/v1",
                    "method":"GET"
                }
            ]
        }
    ]
}